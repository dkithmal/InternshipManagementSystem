<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
    "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<field name="nameInFull">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Name In Full required</message>
		</field-validator>
	</field>

	<field name="nameWithInitials">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Name With Initials required</message>
		</field-validator>
	</field>
	<field name="gender">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Gender is required</message>
		</field-validator>
	</field>

	<field name="permanentAddress">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Permanent Address is required</message>
		</field-validator>
	</field>

	<field name="school">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>School is required</message>
		</field-validator>
	</field>
	<field name="dateOfBirth">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Date of is required</message>
		</field-validator>
	</field>

	<field name="alSubject1">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>A/L subject 1 is required</message>
		</field-validator>
	</field>

	<field name="alSubject2">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>A/L subject 2 is required</message>
		</field-validator>
	</field>

	<field name="alSubject3">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>A/L subject 3 is required</message>
		</field-validator>
	</field>


	<field name="mobile1">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Mobile Number is required</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">10</param>
			<param name="maxLength">10</param>
			<message>Mobile number Must be 10 digits</message>
		</field-validator>
	</field>

	<field name="mobile2">
		<field-validator type="stringlength">
			<param name="minLength">10</param>
			<param name="maxLength">10</param>
			<message>Mobile number Must be 10 digits</message>
		</field-validator>
	</field>

	<field name="telephone">
		<field-validator type="stringlength">
			<param name="minLength">10</param>
			<param name="maxLength">10</param>
			<message>Telephone number Must be 10 digits</message>
		</field-validator>

	</field>

	<field name="email">

		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>email is required</message>
		</field-validator>
		<field-validator type="email">
			<param name="trim">true</param>
			<message>email address is not valid</message>
		</field-validator>
	</field>










</validators>